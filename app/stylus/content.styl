
.features {
	padding-top 30px
	visibility visible !important
	&__in {
		width 960px
		margin 0 auto
		text-align center
		color #242424
	}
	&__heading {
		text-transform uppercase
		font-size 30px
		margin-bottom 82px
		opacity 0
		rb700()
		&_animated {
			animation appear 1s ease forwards
			animation-delay 0.5s
		}
	}
	&__group {
		clearfix()
		position relative
	}
	
	&__image {
		position absolute
		left 50%
		transform translateX(-50%)
		top -32px
		&_first {
			opacity 1
			top -60px
		}
		&_second {
			opacity 0
			transform translateX(-55%)
		}
		&_first_animated {
			animation hide 0.5s ease forwards
		}
		&_second_animated {
			animation appear 0.5s ease forwards
			animation-delay 0.5s
		}
	}
	&__left {
		float left
	}
	&__feature {
		width 202px
		margin-bottom 145px
		position relative
		z-index 1
		opacity 0
		
		&_animated_first {
			animation appear 0.5s ease forwards
			animation-delay 0.9s
		}
		&_animated_second {
			animation appear 0.5s ease forwards
			animation-delay 1.4s
		}
		&_animated_third {
			animation appear 0.5s ease forwards
			animation-delay 1.9s
		}
		&_animated_forth {
			animation appear 0.5s ease forwards
			animation-delay 2.4s
		}
		
	}
	&__feature-heading {
		font-size 18px
		text-transform uppercase
		margin-bottom 12px
		padding-bottom 5px
		position relative
		&_top_left:before {
			content ''
			position absolute
			sprite($pointer_bottom_right)
			bottom -90px
			left -10px
		}
		
		&_bottom_left:before {
			content ''
			position absolute
			sprite($pointer_top_right)
			bottom -3px
			left 0px
		}
		&_top_right:before {
			content ''
			position absolute
			sprite($pointer_bottom_left)
			bottom -90px
			right 0px
		}
		
		&_bottom_right:before {
			content ''
			position absolute
			sprite($pointer_top_left)
			bottom -3px
			right 0px
		}
	}
	&__feature-text {
		font-size 12px
	}
	&__right {
		float right
	}
}

