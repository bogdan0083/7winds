		&:before {
			content '“'
			font-size 60px
			position absolute
			left -40px
			top -15px
			width 17px
			height 16px
		}
		&:after {
			content '“'
			font-size 60px
			position absolute
			right -10px
			bottom 0px
			width 17px
			height 16px
		}
	}
	&__slide-bottom {
		position absolute
		bottom 35px
		clearfix()
		width 100%
		left 0
	}
	&__show-more {
		display block
		font-size 14px
		text-decoration underline
		text-align center
		margin-top 5px
	}
	&__place, &__name {
		font-size 14px
		padding 0 47px 0 57px
	}
	&__place {
		float left
	}
	&__name {
		float right
	}
	&__bottom {
		position absolute
		bottom 0
		right 268px
	}
	&__controls {
		width 400px
		position relative
	}
	&__control {
		width 400px
		height 240px
		background-color white
		padding 8px
		overflow hidden
		position absolute
		box-shadow -2.1px 2.1px 5px rgba(0, 0, 0, 0.35)
		cursor pointer
		&::before {
				content ''
				position absolute
				left 8px
				top 8px
				width 386px
				height 226px
				background-color rgba(61, 57, 55, 0.68)
				z-index 1
				transition all 0.4s ease
		}
		&_active::before {
			opacity 0
		}
		img {
			width 100%
			height 100%
			position relative
			display block
		}
		&:nth-child(1) {
			transform rotate(-10deg)
			top 50px
			left -10px
		}
		&:nth-child(2) {
			transform rotate(5deg)
			top 260px
			left 10px
			z-index 1
		}
		&:nth-child(3) {
			transform rotate(-4deg)
			top 480px
			left -10px
		}
	}
}
