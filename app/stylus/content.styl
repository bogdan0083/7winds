.process {
	min-height 680px
	background url(../images/process-bg.jpg) no-repeat center / cover
	overflow hidden
	&__in {
		width 1200px
		margin 0 auto
		clearfix()
		position relative
		&:before {
			content ''
			position absolute
			sprite($b2)
			left 100px
			top -30px
			opacity 0
		}
		
		&:after {
			content ''
			position absolute
			sprite($b1)
			left -350px
			top 0px
			opacity 0
		}
		&_animated::before {
			animation appear 1s ease forwards
			animation-delay 1s
		}
		
		&_animated::after {
			animation appear 1s ease forwards
			animation-delay 0.4s
		}
	}
	&__heading {
		text-align center
		rb700()
		text-transform uppercase
		font-size 24px
		margin-top 40px
		margin-bottom 80px
	}
	&__wrap {
		clearfix()
	}
	&__steps {
		float right
		width 850px
		height 358px
		position relative
		margin-right 45px
		margin-bottom 12px
		&:before {
			content ''
			position absolute
			sprite($b3)
			right -@width + 5px
			top -100px
			opacity 0
		}
		&_animated::before {
			animation appear 1s ease forwards
			animation-delay 1.4s
		}
	}
	&__step {
		rb400i()
		font-size 18px
		position absolute
		z-index 1
		&:nth-child(1) {
			width 160px
			text-align right
			top 100px
		}
		&:nth-child(2) {
			width 212px
			text-align left
			top 70px
			left 400px
		}
		&:nth-child(3) {
			width 200px
			text-align left
			top 285px
			right 7px
		}
	}
	&__steps-image {
		display block
		position absolute
		top 0
		right 0
	}
	&__bottom {
		float right
	}
	&__button {
		margin-bottom 35px
		float right
	}
	&__warning {
		clear both
		font-size 18px
		rb500()
	}
}
.testimonials {
