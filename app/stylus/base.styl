
// base styles

html
  box-sizing border-box

*, *:before, *:after 
  box-sizing inherit

body
  color #242424
  font-size 20px
  background white
  rb300()
  
.main
  min-width 1200px
  margin 0 auto
  clearfix()
  &_form
    background url('../images/form-bg.jpg') no-repeat center / cover
    min-height 680px

a
  color black
  text-decoration none
  
// FONTS
    
webfont('Lato Medium Italic', '../fonts/lato-mediumitalic-webfont', 500, italic)
webfont('Lato Semi Bold Italic', '../fonts/lato-semibolditalic-webfont', 600, italic)


/*!! POPUP */

.popup {
  position: relative;
  background: #FFF;
  padding: 20px;
  width: auto;
  max-width: 500px;
  margin: 20px auto;
} 

// COMPONENT: button

.button {
  display inline-block
  text-transform uppercase
  line-height 53px
  height 53px
  padding-left 35px
  padding-right 35px
  color white
  font-size 15px
  border none
  border-radius 6px
  box-shadow 0 2px 6px rgba(0, 0, 0, 0.22), inset 0 -2px 0 rgba(0, 0, 0, 0.2)
  transition all 0.4s ease
  rb700()
  
  &:active {
    box-shadow inset 0 2px 0 rgba(0, 0, 0, 0.2)
  }
  
  &_orange {
    background-color #ffad00
    &:hover {
      background-color #f5b75f
    }
    
    &:active {
      background-color #d69840
    }
  }
  
  &_red {
    background-color #e41915
    
    &:hover {
      background-color #d73e3b
    }
    
    &:active {
      background-color #c81612
    }
    
  }
}

// COMPONENT: FORM

.form {
  background-color rgba(255, 255, 255, 0.2)
  background-image linear-gradient(to top, rgba(0, 0, 0, 0.01) 0%, rgba(255, 255, 255, 0.01) 100%)
  border-radius 5px
  box-shadow 0 1px 2.9px 0.1px rgba(0, 0, 0, 0.3), inset 0 0 2px rgba(255, 255, 255, 0.7)
  padding 70px
  margin 22px auto
  input::-webkit-input-placeholder { color: #616161; }
  input::-moz-placeholder { color: #616161; }
  input:-ms-input-placeholder { color: #616161; } 
  textarea::-webkit-input-placeholder { color: #616161; }
  textarea::-moz-placeholder { color: #616161; }
  textarea:-ms-input-placeholder { color: #616161; } 
  &_w960 {
    width 960px
  }
  
  &__file-wrap {
    padding-left 15px
    padding-right 10px
    border-radius 6px
    width 340px
    border 0
    border 0.2px solid #959595
    vertical-align bottom
    border-radius 5px
    box-shadow inset -0.7px 0.7px 0 rgba(0, 0, 0, 0.35)
    height 46px
    display inline-block
    font-family Arial, sans-serif
    clearfix()
    font-size 14px
    background-color white
  }
  
  &_custom {
    .label:nth-child(1) {
      margin-right 20px
    }
    
    .label_name{
      margin-top 30px
    }
    
    &__wrapper-bottom {
      margin-top 170px
      clearfix()
    }
    
    textarea {
      float left
    }
    &__wrapper-right {
      float right
      margin-right 40px
    }
  }
  
  &__agreement {
    label {
      font-size 14px
      color #242424
      position relative
      padding-left 40px
    }
  }
  &__checkbox {
    display none
  }
  &__checkbox + label::before {
    content ''
    left 0
    cursor pointer
    position absolute
    top 50%
    left 10px
    sprite($checkbox_square)
    margin-top -(@width / 2)
  }
  &__checkbox:checked + label::before {
    content ''
    sprite($checkbox_square_checked)
  }
  &__checkbox_circle + label::after {
    content ''
    left 0
    cursor pointer
    position absolute
    top -80%
    left 10px
    sprite($checkbox_circle)
    margin-top -(@width / 2)
  }
  &__checkbox_circle:checked + label::after {
    content ''
    sprite($checkbox_circle_checked)
  }
  
  &__submit {
    float left
    margin-top 25px
    margin-left 15px
  }
}

// COMPONENT: label
 
.label {
  color #616161
  font-size 14px
  text-indent 5px
  margin-left 12px
  display inline-block
}
// COMPONENT: field

.field {
    padding-left 10px
    padding-right 10px
    border-radius 6px
    width 180px
    border 0
    border 0.2px solid #959595
    border-radius 5px
    box-shadow inset -0.7px 0.7px 0 rgba(0, 0, 0, 0.35)
    height 46px
    display block
    font-family Arial, sans-serif
    font-size 14px
    background-color white
    margin-top 8px
    &_calendar {
      background white url('../images/calendar.png') no-repeat 150px center
      padding-right 35px
    }
}

.file-wrap__filename {
      float left
      height 46px
      line-height 46px
      max-width 190px
      color #616161   
}

.inputfile + label {
    cursor: pointer
    width 112px
    height 35px
    padding 0
    line-height 35px
    text-align center
    float right
    font-size 11px
    margin-top 5px
}


.no-js .inputfile + label {
    display: none;
}

.js .inputfile {
    width: 0.1px;
    height: 0.1px;
    opacity: 0;
    overflow: hidden;
    position: absolute;
    z-index: -1;
}

// COMPONENT: textarea

.textarea {
    padding 15px
    border-radius 6px
    width 565px
    border 0
    border 0.2px solid #959595
    border-radius 5px
    box-shadow inset -0.7px 0.7px 0 rgba(0, 0, 0, 0.35)
    height 78px
    display block
    font-family Arial, sans-serif
    font-size 14px
    background-color white
    margin-top 8px
}

// KEYFRAMES FOR DISCOUNT BLOCK

@keyframes scaleUp
  0%
    transform scale(0)
  70%
    transform scale(1.1)
  100%
    transform scale(1)
    
// KEYFRAMES FOR ARROW DOWN

@keyframes moveDown
  0%
    transform translateY(0px)
  
  50% 
    transform translateY(10px)
  100%
    transform translateY(0px)


@keyframes hide
  0%
    opacity 1
  100%
    opacity 0

@keyframes appear
  0%
    opacity 0
  100%
    opacity 1